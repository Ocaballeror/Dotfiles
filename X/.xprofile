#
# ~/.xprofile
#
# sourced by /etc/lxdm/Xsession
#

if which dbus-launch >/dev/null && test -z "$DBUS_SESSION_BUS_ADDRESS"; then
    eval "$(dbus-launch --sh-syntax --exit-with-session)"
fi

# Environment variables
#
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"
#!/bin/sh

customstartup="$HOME/.xcustom"
userresources="$HOME/.Xresources"
usermodmap="$HOME/.Xmodmap"
sysresources="/etc/X11/xinit/.Xresources"
sysmodmap="/etc/X11/xinit/.Xmodmap"

# start some nice programs

if [ -d "/etc/X11/xinit/xinitrc.d" ] ; then
 for f in "/etc/X11/xinit/xinitrc.d/?*.sh" ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

[ -f "$userresources" ] && xrdb "$userresources"
[ -f "$customstartup" ] && source "$customstartup"

# Set the desktop wallpaper
hash feh 2>/dev/null && [ -f "$HOME/.fehbg" ] && sh "$HOME/.fehbg" &

hash xautolock 2>/dev/null && xautolock -detectsleep -time 10 -locker "i3lock-fancy" -notify 30 -notifier "notify-send -u critical -t 100000 -- 'LOCKING SCREEN IN 30 SECONDS'" &

# load up the fonts
xset fp+ /home/oscar/.fonts/misc
xset fp+ /home/oscar/.fonts/terminesspowerline
fc-cache -f
