[include]
	path = ~/.gitcredentials

[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[diff]
	tool = nvimdiff

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool]
	prompt = false

[color]
	ui = auto

[alias]
	st = status
	co = checkout
	cm = commit
	cma = commit --amend --no-edit
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	br = branch
	bra = branch -a
	rb = rebase
	rbi = rebase -i
	rbc = rebase --continue
	rba = rebase --abort
	dif = diff
	ush = push
	ull = pull
	ulll = pull
	pul = pull
	pulll = pull
	pra = fetch --all
	push-f = push -f
	pulum = pull upstream master
	bs = bisect
	bsg = bisect good
	bsb = bisect bad

[push]
	default = simple

[rebase]
	autosquash = true

[log]
	showRoot = false

[fetch]
	prune = true
