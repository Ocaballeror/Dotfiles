[include]
	path = ~/.gitcredentials

[core]
	editor = vim
	mergetool = vimdiff
	excludesfile = ~/.gitignore_global

[color]
	ui = auto

[alias]
	st = status
	co = checkout
	cm = commit
	cp = cherry-pick
	br = branch
	bra = branch -a
	rb = rebase
	rbi = rebase -i
	rbc = rebase --continue
	dif = diff
	ush = push
	ull = pull
	ulll = pull
	pul = pull
	pulll = pull
	pra = fetch --prune --all
	pulum = pull upstream master

[push]
	default = simple

[rebase]
	autosquash = true

[log]
	showRoot = false
